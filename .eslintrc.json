{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            { "allow": ["warn", "error", "info"] }
        ],
        "global-require": "off",
        "no-param-reassign": "off",
        "no-use-before-define": "off",
        "prefer-rest-params": "off",
        "func-names": "off",
        "function-paren-newline": "off"
    }
}