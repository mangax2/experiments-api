{
  "name": "experiments-api",
  "version": "1.0.0",
  "description": "Experiments API",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build src && babel ./src/swagger --out-dir ./build/swagger --copy-files",
    "dev": "cross-env NODE_ENV=development nodemon ./src/app.js",
    "start": "NODE_ENV=production node ./build/app",
    "test": "node_modules/.bin/nyc node_modules/.bin/_mocha test",
    "test:dev": "mocha --watch test",
    "eslint": "eslint src; exit 0",
    "check-coverage": "nyc check-coverage --lines 16"
  },
  "repository": {
    "type": "git",
    "url": "git@github.platforms.engineering:Cosmos/experiments-api.git"
  },
  "dependencies": {
    "@monsantoit/cloud-foundry": "~2.1.0",
    "@monsantoit/ping-page": "~2.0.3",
    "@monsantoit/profile-middleware": "~3.1.0",
    "@monsantoit/prom-metrics": "~2.0.0",
    "bluebird": "~3.4.6",
    "body-parser": "~1.15.2",
    "compression": "~1.6.2",
    "es6-promise": "~3.3.0",
    "express": "~4.14.0",
    "express-promise": "~0.4.0",
    "hoek": "^4.1.0",
    "json-inflector": "^1.1.0",
    "lodash": "~4.15.0",
    "log4js": "~0.6.38",
    "pg-promise": "~5.3.3",
    "swagger-node-express": "~2.1.3",
    "swagger-tools": "~0.10.1",
    "validator": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "~6.14.0",
    "babel-core": "~6.14.0",
    "babel-preset-es2015": "~6.14.0",
    "babel-preset-stage-0": "~6.5.0",
    "babel-register": "^6.14.0",
    "chai": "~3.5.0",
    "chai-as-promised": "~5.3.0",
    "cross-env": "~2.0.1",
    "eslint": "~3.5.0",
    "istanbul": "~0.4.5",
    "mocha": "~3.0.2",
    "nodemon": "~1.10.2",
    "nyc": "~8.3.0",
    "piping": "~0.3.2",
    "sinon": "~1.17.5",
    "sinon-as-promised": "~4.0.2",
    "sinon-chai": "~2.8.0",
    "sql-generate": "~1.4.0",
    "superagent": "~2.2.0",
    "superagent-as-promised": "~4.0.0",
    "supertest": "~2.0.0",
    "validate.js": "^0.10.0"
  },
  "engines": {
    "node": "~4.4.4",
    "npm": "2.15.x"
  },
  "nyc": {
    "require": [
      "babel-core/register"
    ],
    "exclude": [
      "src/repos",
      "src/**/*Config.js",
      "src/db/",
      "node_modules",
      "*.js",
      "test"
    ]
  },
  "license": "ISC"
}
