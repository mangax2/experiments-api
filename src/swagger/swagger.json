    "paths": {
        "/experiments": {
            "get": {
                "summary": "get all experiment entities",
                "description": "The Experiments endpoint returns information about the experiment entities \nin Experiments System.\n",
                "tags": [
                    "Experiments"
                ],
                "responses": {
                    "200": {
                        "description": "An array of experiments",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Experiment"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "post one experiment entity",
                "description": "Creates new experiment in Experiments System.\n",
                "tags": [
                    "Experiments"
                ],
                "parameters": [
                    {
                        "name": "experiment",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ExperimentPayload"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Experiment entity",
                        "schema": {
                            "type": "number"
                        }
                    }
                }
